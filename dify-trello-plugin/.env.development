# DIFY Trello Upload Plugin - Development Environment
# This file contains development-specific environment variables

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development mode
PLUGIN_DEV_MODE=true

# Verbose logging for development
LOG_LEVEL=debug

# Development server settings
DEV_SERVER_PORT=8000
DEV_SERVER_HOST=localhost

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test mode settings
ENABLE_TEST_MODE=true
MOCK_API_RESPONSES=false

# Test board and list IDs (replace with your test board)
TEST_BOARD_ID=your_test_board_id_here
TEST_LIST_ID=your_test_list_id_here

# =============================================================================
# API RATE LIMITING (Development)
# =============================================================================

# Reduced rate limits for development testing
DEV_RATE_LIMIT_REQUESTS=10
DEV_RATE_LIMIT_WINDOW=60

# Retry configuration for development
DEV_MAX_RETRIES=2
DEV_RETRY_DELAY=1

# =============================================================================
# DEBUGGING OPTIONS
# =============================================================================

# Enable request/response logging
LOG_API_REQUESTS=true
LOG_API_RESPONSES=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Save debug information to files
SAVE_DEBUG_LOGS=true
DEBUG_LOG_PATH=./logs/debug.log

# =============================================================================
# DEVELOPMENT UTILITIES
# =============================================================================

# Auto-reload plugin on code changes
AUTO_RELOAD_PLUGIN=true

# Validate inputs more strictly in development
STRICT_INPUT_VALIDATION=true

# Enable development API endpoints
ENABLE_DEV_ENDPOINTS=true